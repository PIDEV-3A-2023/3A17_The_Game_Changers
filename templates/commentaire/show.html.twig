{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block showC %}
    <section class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="text-center mb-0">Commentaire</h1>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>user</th>
                                    <td>{{ commentaire.idCom }}</td>
                                </tr>
                                <tr>
                                    <th>Contenu</th>
                                    <td>{{ commentaire.contenu }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">Back to list</a>
                            <div>
                                <a href="{{ path('app_commentaire_edit', {'idCom': commentaire.idCom}) }}" class="btn btn-primary mr-3">Edit</a>
                                {{ include('commentaire/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
