{% extends 'base.html.twig' %}

{% block title %}Voir Reclamation{% endblock %}
{% block slider %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Comment template CSS */
        table {
            width: 50%;
            margin-bottom: 1rem;
            background-color: #f8f9fa;
            border-collapse: collapse;
        }
        
        table th,
        table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
            font-size: 14px;
        }
        
        table thead th {
            background-color: #007bff;
            color: #fff;
            vertical-align: middle;
            border-bottom: 2px solid #dee2e6;
        }
        
        table tbody + tbody {
            border-top: 2px solid #dee2e6;
        }
        
        table tr:hover {
            background-color: #e2e6ea;
        }
        
        table tbody tr:nth-of-type(odd) {
            background-color: #f8f9fa;
        }
        
        .btn {
            padding: 10px;
            font-size: 14px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        
        .btn:hover {
            background-color: #0069d9;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
{% endblock %}

{% block dataR %}
    <h1>Reclamation</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Nom</th>
                <td>{{ reclamation.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ reclamation.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ reclamation.adresse }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ reclamation.contenu }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ reclamation.datecreation ? reclamation.datecreation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary">Back to list</a>

    <div class="mt-4">
        <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-primary mr-3">Edit</a>
        {{ include('reclamation/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block newsletter %}{% endblock %}
