{% extends 'back.html.twig' %}

{% block title %}Consulter Reclamations{% endblock %}

{% block body %}
<h1 class="h3 mb-3">Consulter Reclamations</h1>

{% if reclamations|length %}
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Contenu</th>
                <th>Date de cr√©ation</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.nom }}</td>
                <td>{{ reclamation.prenom }}</td>
                <td>{{ reclamation.adresse }}</td>
                <td>{{ reclamation.contenu }}</td>
                <td>{{ reclamation.datecreation ? reclamation.datecreation|date('Y-m-d') : '' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% else %}
<p>No reclamations found.</p>
{% endif %}

{% endblock %}
