{% extends 'back.html.twig' %}

{% block title %}Statistics{% endblock %}

{% block body %}
    <h1 class="h3 mb-3">Reclamation Statistics</h1>

    <div class="row">
        <div class="col-lg-3 col-6">
            <div class="small-box bg-info">
              <div class="inner">
                <h3>{{ count }}</h3>
                <p>Total number of reclamations</p>
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
<a href="{{ path('app_reclamation_index') }}" class="">More info<i class="fas fa-arrow-circle-right"></i></a>

            </div>
        </div>

        <div class="col-lg-3 col-6">
            <div class="small-box bg-success">
              <div class="inner">
                <h3>{{ oldest }}</h3>
                <p>Oldest reclamation</p>
              </div>
              <div class="icon">
                <i class="ion ion-stats-bars"></i>
              </div>
<a href="{{ path('app_reclamation_index') }}" class="">More info<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col-lg-3 col-6">
            <div class="small-box bg-warning">
              <div class="inner">
                <h3>{{ newest }}</h3>
                <p>Newest reclamation</p>
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
<a href="{{ path('app_reclamation_index') }}" class="">More info<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
{% endblock %}
