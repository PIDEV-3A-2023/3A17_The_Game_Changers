{% extends 'back.html.twig' %}

{% block title %}Add Reclamation{% endblock %}

{% block body %}
  <div class="container-fluid py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-sm">
          <div class="card-body">
            <h3 class="text-center mb-4">Add Reclamation</h3>
            <form method="post" enctype="multipart/form-data">
              <div class="form-group">
                {{ form_label(form.nom, 'nom') }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'rows': 3}}) }}
              </div>
              <div class="form-group">
                {{ form_label(form.prenom, 'Prenom') }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'rows': 5}}) }}
              </div>
              <div class="form-group">
                {{ form_label(form.adresse, 'Email') }}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'rows': 3}}) }}
              </div>
              <div class="form-group">
                {{ form_label(form.contenu, 'Contenu') }}
                {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="form-group">
                <label for="image">Image</label>
                <input type="file" name="image" id="image" class="form-control">
              </div>
              <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary mr-3">Save</button>
                <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary ml-3" formaction="{{ path('app_reclamation_new') }}">Upload Image</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
