            </tr>
            <tr>
                <th>AutoBatterie</th>
                <td>{{ vehicule.autoBatterie }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ vehicule.couleur }}</td>
            </tr>
            <tr>
                <th>TypeVehicule</th>
                <td>{{ vehicule.typeVehicule }}</td>
