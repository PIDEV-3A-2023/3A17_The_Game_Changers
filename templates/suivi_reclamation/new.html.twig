{% extends 'back.html.twig' %}

{% block title %}Add Suivi Reclamation{% endblock %}

{% block body %}
  <div class="container-fluid py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-sm">
          <div class="card-body">
            <h3 class="text-center mb-4">Add Suivi Reclamation</h3>
            <form method="post">
             
              <div class="form-group">
                {{ form_label(form.reponseReclamation, 'Description') }}
                {{ form_widget(form.reponseReclamation, {'attr': {'class': 'form-control', 'rows': 5}}) }}
              </div>
              <div class="form-group">
                {{ form_label(form.idReclamation, 'Réponse') }}
                {{ form_widget(form.idReclamation, {'attr': {'class': 'form-control', 'rows': 3}}) }}
              </div>
              <div class="form-group">
                {{ form_label(form.save, 'Réclamation associée') }}
                {{ form_widget(form.save, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary mr-3">Save</button>
                <a href="{{ path('app_suivi_reclamation_index') }}" class="btn btn-secondary">Back to List</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
